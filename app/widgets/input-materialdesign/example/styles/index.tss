"#secondTextField":{
	colorPatter: 'red'
  , colorFocus: 'gray'
  , titleHint: 'Password'
  , returnKey: Titanium.UI.RETURNKEY_GO
  , keyboardType: Titanium.UI.KEYBOARD_DEFAULT
  , password: true
  , left: '10%'
  , top: '50%'
  , width: '70%'
  , editable: true
}
