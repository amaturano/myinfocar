//
// firstTextField
//

"#win":{
	backgroundColor: "#FFF"
}

"#firstTextField":{
	colorPatter: 'green'
  , colorFocus: 'blue'
  , titleHint: 'Username'
  , returnKey: Titanium.UI.RETURNKEY_NEXT
  , keyboardType: Titanium.UI.KEYBOARD_EMAIL
  , left: '10%'
  , top: '20%'
  , width: '70%'
  , editable: true
  , maxLength: 10
  , exceedingColor: "#F44336"
}

//
// secondTextField
